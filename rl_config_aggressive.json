{
  "data": {
    "train_data": "./data/features/2025/{04,05,06,07,08}/*.parquet",
    "test_data": "./data/features/2025/09/*.parquet",
    "validation_data": "./data/features/2025/08/*.parquet"
  },
  "training": {
    "total_timesteps": 1000000,
    "eval_freq": 10000,
    "n_eval_episodes": 10,
    "batch_size": 256,
    "n_steps": 8192,
    "gamma": 0.99,
    "learning_rate": 0.001,
    "ent_coef": 0.005,
    "clip_range": 0.3,
    "n_epochs": 5,
    "gae_lambda": 0.92,
    "max_grad_norm": 1.0,
    "vf_coef": 0.4,
    "verbose": 1,
    "seed": 42
  },
  "environment": {
    "reward_scaling": 1.0,
    "transaction_cost": 0.001,
    "max_position_size": 1.0,
    "risk_free_rate": 0.0,
    "reward_type": "aggressive"
  },
  "optimization": {
    "n_trials": 100,
    "timeout": 3600,
    "metric": "mean_reward",
    "retrain_best": true,
    "full_timesteps": 1000000
  },
  "evaluation": {
    "n_eval_episodes": 20,
    "n_episodes": 20,
    "max_steps_per_episode": 10000,
    "deterministic": true,
    "plot_style": "default"
  },
  "paths": {
    "log_dir": "./logs/",
    "model_dir": "./models/ppo_halfyear_aggressive",
    "results_dir": "./results/",
    "opt_dir": "./optimization/",
    "tensorboard_log": "./tensorboard/"
  },
  "experiment": {
    "name": "ppo_halfyear_aggressive_comparison",
    "description": "1M steps aggressive model for comparison - higher learning rate, larger batch size, faster convergence",
    "seed": 42
  }
}