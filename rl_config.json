{
  "data": {
    "train_data": "./data/features/2025/{04,05,06,07,08}/*.parquet",
    "test_data": "./data/features/2025/09/*.parquet",
    "validation_data": "./data/features/2025/08/*.parquet"
  },
  "training": {
    "total_timesteps": 1000000,
    "eval_freq": 10000,
    "n_eval_episodes": 10,
    "batch_size": 128,
    "n_steps": 4096,
    "gamma": 0.995,
    "learning_rate": 0.0001,
    "ent_coef": 0.02,
    "clip_range": 0.15,
    "n_epochs": 15,
    "gae_lambda": 0.98,
    "max_grad_norm": 0.3,
    "vf_coef": 0.6,
    "verbose": 1,
    "seed": 42
  },
  "environment": {
    "reward_scaling": 1.0,
    "transaction_cost": 0.001,
    "max_position_size": 1.0,
    "risk_free_rate": 0.0,
    "reward_type": "aggressive"
  },
  "optimization": {
    "n_trials": 100,
    "timeout": 3600,
    "metric": "mean_reward",
    "retrain_best": true,
    "full_timesteps": 200000
  },
  "evaluation": {
    "n_eval_episodes": 20,
    "n_episodes": 20,
    "max_steps_per_episode": 10000,
    "deterministic": true,
    "plot_style": "default"
  },
  "paths": {
    "log_dir": "./logs/",
    "model_dir": "./models/ppo_halfyear_baseline",
    "results_dir": "./results/",
    "opt_dir": "./optimization/",
    "tensorboard_log": "./tensorboard/"
  },
  "experiment": {
    "name": "ppo_halfyear_baseline_generalization",
    "description": "1M steps training focused on generalization with conservative hyperparameters",
    "seed": 42
  }
}